{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "allowJs": true,
    "experimentalDecorators": true,
		"noEmit": false,
		"isolatedModules": true,
		"esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}